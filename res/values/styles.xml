<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="android:Theme.Light.NoTitleBar">
	  <item name="android:windowBackground">@android:color/white</item>
	  <item name="android:colorBackground">@android:color/white</item>
	</style>
	
    <style name="BarraTopo" parent="">
        <item name="android:textColor">#FFFFFF</item>
    </style>
    
    <style name="TextoTitulo" parent="">
        <item name="android:textColor">#E08E79</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25sp</item>
    </style>
    
    <style name="TextoSubTitulo" parent="">
        <item name="android:textColor">#774F38</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>
    
    <style name="TextoDetalhe" parent="">
        <item name="android:textColor">#774F38</item>
        <item name="android:textSize">14sp</item>
    </style>
    
    <style name="TextoDetalheBranco" parent="">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>