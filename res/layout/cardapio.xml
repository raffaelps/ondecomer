<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txvLblProduto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_produto"
        android:textAppearance="?android:attr/textAppearanceMedium" 
        android:textColor="#774F38"/>

    <TextView
        android:id="@+id/txvProduto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge" 
        android:paddingBottom="5pt"/>

    <TextView
        android:id="@+id/txvLblIngredientes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_ingredientes"
        android:textAppearance="?android:attr/textAppearanceMedium" 
        android:textColor="#774F38"/>

    <TextView
        android:id="@+id/txvIngredientes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge" 
        android:paddingBottom="5pt"/>

    <TextView
        android:id="@+id/txvLblValor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_valor"
        android:textAppearance="?android:attr/textAppearanceMedium" 
        android:textColor="#774F38"/>

    <TextView
        android:id="@+id/txvValor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceLarge" 
        android:paddingBottom="5pt"/>

</LinearLayout>